<h1><%= @game.name %>: buildings</h1>

<% form_for @game do |f| %>
<table cellpadding="0" cellspacing="0">
  <tr>
  	<th>Id</th>
    <th class="text">Name</th>
    <th>Owned</th>
    <th>Cost</th>
    <th>Income</th>
    <th>Level</th>
  </tr>
<% @building.each do |building| %>
  <tr>
    <td><%=h building.id %></td>
    <td class="text"><%=h building.name %></td>
    <td></td>
    <td><%=h building.cost %></td>
    <td><%=h building.income %></td>
    <td><%=h building.level %></td>
    <td><%= link_to 'Show', game_building_path(@game, building) %></td>
    <td>
        <%= link_to 'Edit', edit_game_building_path(@game, building) %>
    </td>
    <td>
        <%= link_to 'Destroy', game_building_path(@game, building),
            :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
      <%= submit_tag 'Save' %>
<% end %>

<p>
<%= link_to 'New building', new_game_building_path(@game) %>
<%= link_to 'Back to Game', @game %>
</p>